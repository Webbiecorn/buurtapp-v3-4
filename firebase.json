{
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "functions": {
    "source": "functions"
  },
  "firestore": {
    "rules": "firestore.rules"
  },
  "storage": {
    "rules": "storage.rules"
  },
  "emulators": {
    "auth": {
      "host": "127.0.0.1",
      "port": 9100
    },
    "functions": {
      "host": "127.0.0.1",
      "port": 5101
    },
    "firestore": {
      "host": "127.0.0.1",
      "port": 8083
    },
    "hosting": {
      "host": "127.0.0.1",
      "port": 5003
    },
    "storage": {
      "host": "127.0.0.1",
      "port": 9201
    },
    "ui": {
      "enabled": true,
      "host": "127.0.0.1",
      "port": 4041
    },
    "singleProjectMode": true,
    "import": "./firebase-emulator-data",
    "exportOnShutdown": true
  }
}
